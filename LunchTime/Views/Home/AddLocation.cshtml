@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<LunchTime.Repository.Location>


<style>
    td .glyphicon {
        float: right;
        margin: 14px 0;
        display: none;
        cursor: pointer;
    }

    td a {
        text-decoration: none !important;
    }

    td:hover .glyphicon {
        display: block;
    }

    td {
        height: 50px;
        line-height: 50px !important;
        font-size: large;
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }
</style>

@using (Html.BeginForm("AddLocation", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Add a lunch location!</legend>

        <div class="form-group">
            <div class="col-lg-12">
                <input type="text" name="Name" class="form-control" id="inputLocation" placeholder="Where do you want to eat?">
            </div>
        </div>

    </fieldset>

    <table class="table table-striped table-hover panel-default">
        <tbody>
            @foreach (var location in Model)
            {
                <tr>
                    <td>
                        @location.Name
                        <a href="@Url.Action("RemoveLocation", new { Name=location.Name })" style="width: 100%;">
                            <span class="glyphicon glyphicon-remove" />
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }

        @section scripts
{
            <script type="text/javascript">

                $(function () {
                    $('#inputDate').datepicker();

                    $('#inputDate').keypress(function (e) {
                        if (e.which == 13) {
                            $('form').submit();
                        }
                    });
                })
            </script>
        }
